{
  "$schema": "https://schema.tauri.app/config/2.0.0",
  "productName": "Hydra Tracker",
  "version": "1.0.1",
  "identifier": "com.hydra.tracker",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Hydra Tracker",
        "width": 420,
        "height": 680,
        "resizable": true,
        "minWidth": 380,
        "minHeight": 500,
        "center": true,
        "decorations": true,
        "transparent": false,
        "visible": false
      }
    ],
    "security": {
      "capabilities": [
        "main-capabilities"
      ],
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "webviewInstallMode": {
        "type": "downloadBootstrapper"
      }
    }
  },
  "plugins": {
    "notification": null,
    "autostart": null,
    "store": null
  }
}
